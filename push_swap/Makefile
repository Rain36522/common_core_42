NAME = pushswap.aout
CC = gcc
FLAGS = -Wall -Wextra -Werror
LIBFT = libft/libft.a
BLUE = \\033[1;34m
WHITE = \\033[0;37m
YELLOW = \\033[0;33m
RED = \\033[1;31m
GREEN = \\033[1;32m
BRWN = \\033[0; 33m

INPUT = -377585817 1531669806 -1009078551 1737093964 1662383318 178000683 -23253496 -280285220 -1893136942 1181401379 -1354242829 -27969815 1330992864 1443204796 1832121769 2075171696 700183206 -473112275 1507504639 -1196201150 -16506612 -1142508425 636216519 1668174794 -1816911503 -1790337612 104578667 1369037609 48904148 1542523787 -519644447 536219305 -912761701 2139102410 -1517473812 491447215 1832542171 -455271360 -1477726637 856242227 -1753557879 -485066271 -2041154079 1024749053 533790057 -1706591735 -1486992825 -1923695828 -884798937 -1292907551 1578912318 1365281454 1497934466 160653471 -1857914621 1356489378 418478128 -1274021457 -671191088 -1205211336 -1699444829 1893014109 730196286 1928317745 274577990 -1007978350 491467520 -32122371 1260832298 -89314894 -1627765899 1433616449 -380009007 -598942506 892831740 -249071171 -1483717343 -1677106347 -657601806 767737177 1722304273 -1139940528 987795598 234024821 -1600438035 -392689009 1000807708 -1190724030 -169786276 -21416175 1367652563 2035187958 -1337315314 614703200 766326769 -1793049874 2045141058 1723686734 663035587 -102062886 

SRC = ft_algorithm.c ft_lst.c ft_lst2.c ft_lst3.c ft_treat_input.c ft_treat_input2.c ft_utils.c ft_utils2.c main.c

all : header
	@make -C libft/
	@$(CC) $(FLAGS) $(SRC) $(LIBFT) -o $(NAME)
	@./$(NAME) $(INPUT)

cnt : header
	@make -C libft/
	@$(CC) $(FLAGS) $(SRC) $(LIBFT) -o $(NAME)
	@./$(NAME) $(INPUT) | wc -l

fclean :
	rm -f $(NAME)
	@make fclean -C libft/

re : fclean all

header :
	@echo "${GREEN}"
	@echo "			   __________"
	@echo "			 . ---------- ."
	@echo "		 	 | .--------. |"
	@echo "			 | | ${BLUE}COMPILE${GREEN}| |       __________       ___"
	@echo "			 | | ${BLUE}FILE${GREEN}   | |      /__________\\    {~._.~}"  
	@echo "		.--------|  --------  |------|    --=-- |-----( Y )---."
	@echo "		|         ----,-.-----       |o ======  |    ()~*~()  | "
	@echo "		|       ______|_|_______     |__________|    (_)-(_)  | "
	@echo "		|      /  %%%%%%%%%%%%  \\                             | "
	@echo "		|     /  %%%%%%%%%%%%%%  \\                            | "
	@echo "		|     ^^^^^^^^^^^^^^^^^^^^                            | "
	@echo "		+-----------------------------------------------------+"
	@echo "		^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ "
	@echo "${BLUE}"
	@echo "\n<------------COMPILING OBJECT------------>\n"
	@echo "${WHITE}"



.PHONY : fclean re all