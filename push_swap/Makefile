NAME = push_swap
CC = gcc
FLAGS = -Wall -Wextra -Werror
LIBFT = libft/libft.a
BLUE = \\033[1;34m
WHITE = \\033[0;37m
YELLOW = \\033[0;33m
RED = \\033[1;31m
GREEN = \\033[1;32m
BRWN = \\033[0; 33m

INPUT = 1392930823 1571105086 -468227484 -883892875 -1078694250 2026762317 -16683527 -157665079 -1477307501 -1072317889 581614359 -822939634 -618821336 -651367061 -1123718674 -1689822345 -1801877059 1927938142 -1362180599 -1506176839 -497062135 1231629001 -577801876 762519876 1982459610 -1471816704 -1689517190 541951378 -550519195 -1346622253 -709316065 -1700597494 1905428457 -1927414593 -353867102 -313785889 1009061431 144251304 2047713830 -770071157 -1738357784 1893162344 501054113 -158219989 -432586051 -447378561 999956781 2003210152 -1578630099 247372965 -892968516 449428118 -287124641 1651508370 -623706894 1678309283 -294179761 -1944948279 1054845575 -1171990263 -1622282498 -305780470 -2060456072 164029162 242860204 415900792 -249595760 1803465021 -1861372415 1700400747 -704896655 103349329 -232431119 -995920811 -1433301567 1168235080 182286273 1351802172 -1792703331 1414997515 1123864119 695300145 -2081321971 -820341663 1642926554 -289079429 -915564180 511909193 -1551653181 -511994305 1387313028 621860101 -1554618985 -1763914728 1834488782 51070279 -2096660313 1957971772 -26167103 -440658597 -786448837 -1791804188 -1777911896 1654006394 1257923002 1392113814 -315716998 -1140946534 1191473013 146958200 -994222946 -1209040212 -1520342566 -1229223156 -1794285528 -2022418705 -1049856800 1000743599 41337463 -1825511499 -850200340 628125905 -146427221 1677503511 -510670444 -1971919763 1005549151 868727644 -1132541134 161845796 2001290825 -489556570 -604446613 -1790117751 619853174 23025921 1345217305 941640321 1369301958 459072501 494614360 -441411932 670685190 2052490843 1771303057 1907488800 1927589300 -1166031558 1588971167 -921204967 -1823602923 731601258 -1040660841 -1600782969 1340417976 145666943 -1213628005 -1307047831 1083831176 -1759482681 933632669 -1238462972 1210027827 1019471505 -329567959 -1106710831 578812714 991008495 383373008 -258509915 669433018 744818979 1112596779 -342253851 -67343538 509453749 -169689203 877616746 -1257015327 524368531 2134965380 -1284013303 -1214676583 -658245069 -703765524 -450525802 -1511240153 -1512761386 -1591070741 -1208239325 -631888088 605286657 -1936081496 -345801055 -477422500 1621682236 1646233224 1030013917 -882485013 -1908024281 

SRC = ft_algorithm.c ft_lst.c ft_lst2.c ft_lst3.c ft_treat_input.c \
ft_treat_input2.c ft_utils.c ft_utils2.c ft_utils3.c main.c

OBJ = ft_algorithm.o ft_lst.o ft_lst2.o ft_lst3.o ft_treat_input.o \
ft_treat_input2.o ft_utils.o ft_utils2.o ft_utils3.o main.o

all : header gen_obj
	@make -C libft/
	@$(CC) $(FLAGS) $(OBJ) $(LIBFT) -o $(NAME)
	@./$(NAME) $(INPUT)

cnt : header gen_obj
	@make -C libft/
	@$(CC) $(FLAGS) $(SRC) $(LIBFT) -o $(NAME)
	@./$(NAME) $(INPUT) | wc -l

check : header gen_obj
	@make -C libft/
	@$(CC) $(FLAGS) $(OBJ) $(LIBFT) -o $(NAME)
	@./$(NAME) $(INPUT) | ./checker_Mac $(INPUT)

leak : header gen_obj
	@make -C libft/
	@$(CC) $(FLAGS) $(OBJ) $(LIBFT) -o $(NAME)
	@leaks -atExit -- ./$(NAME) $(INPUT)

clean :
	@rm -f $(OBJ)
	@make clean -C libft/

fclean : clean
	@rm -f $(NAME) 
	@make fclean -C libft/

re : fclean all

gen_obj :
	@$(CC) $(CFLAGS) -c $(SRC)

header :
	@echo "${GREEN}"
	@echo "		   __________"
	@echo "		 . ---------- ."
	@echo "		 | .--------. |"
	@echo "		 | | ${BLUE}COMPILE${GREEN}| |       __________       ___"
	@echo "		 | | ${BLUE}FILE${GREEN}   | |      /__________\\    {~${RED}.${GREEN}_${RED}.${GREEN}~}"  
	@echo "	.--------|  --------  |------|    --=-- |-----( Y )---."
	@echo "	|         ----,-.-----       |o ======  |    ()~*~()  | "
	@echo "	|       ______|_|_______     |__________|    (_)-(_)  | "
	@echo "	|      /  %%%%%%%%%%%%  \\                             | "
	@echo "	|     /  %%%%%%%%%%%%%%  \\                            | "
	@echo "	|     ^^^^^^^^^^^^^^^^^^^^                            | "
	@echo "	+-----------------------------------------------------+"
	@echo "	^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ "
	@echo "${BLUE}"
	@echo "\n<------------COMPILING OBJECT------------>\n"
	@echo "${WHITE}"



.PHONY : fclean re all header clean cnt check leak